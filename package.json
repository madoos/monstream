{
  "name": "monstream",
  "version": "0.0.0-development",
  "description": "Native node stream from a monadic perspective",
  "homepage": "https://github.com/madoos/monstream",
  "author": {
    "name": "Maurice DomÃ­nguez",
    "email": "maurice.ronet.dominguez@gmail.com",
    "url": "https://github.com/madoos"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "stream",
    "monadic",
    "fantasy land",
    "functor"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-angular": "^8.0.0",
    "@commitlint/config-conventional": "^7.5.0",
    "conventional-changelog-cli": "^2.0.11",
    "coveralls": "^3.0.2",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-prettier": "^3.0.1",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.15.2",
    "prettier-eslint-cli": "^4.7.1",
    "semantic-release": "^15.13.18"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --single-quote --bracket-spacing true --print-width 80 --semi --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest --coverage",
    "tdd": "npm test -- --watch",
    "precommit": "lint-staged",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "serve:coverage": "http-server coverage/ -o",
    "semantic-release": "semantic-release"
  },
  "repository": "git@github.com:madoos/monstream.git",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
